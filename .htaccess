RewriteEngine On

# Defina o base path corretamente (ajuste se seu app não está na raiz)
RewriteBase /

# Não reescreva se for arquivo ou diretório real
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirecione tudo para index.php, mantendo parâmetros
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
